<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_card"
    android:layout_width="400dp"
    android:layout_height="125dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/base_card_dog_image"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/main_dog_image"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/client_base_dog_foreground" />

        <TextView
            android:id="@+id/base_card_dog_name"
            style="@style/Title_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dog_name"
            app:layout_constraintStart_toEndOf="@+id/base_card_dog_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/base_dog_shelter_name"
            style="@style/Title_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/dog_shelter_name"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/base_card_dog_image"
            app:layout_constraintTop_toBottomOf="@+id/base_card_dog_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
