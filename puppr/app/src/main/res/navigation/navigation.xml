<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.puppr.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupOptionsFragment"
            app:destination="@id/signupOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userLoginFragment"
        android:name="com.example.puppr.userLoginFragment"
        android:label="userLoginFragment" />
    <fragment
        android:id="@+id/signupOptionsFragment"
        android:name="com.example.puppr.SignupOptionsFragment"
        android:label="SignupOptionsFragment" >
        <action
            android:id="@+id/action_signupOptionsFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
    </fragment>
</navigation>