<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.puppr.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupOptionsFragment"
            app:destination="@id/signupOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userLoginFragment"
        android:name="com.example.puppr.userLoginFragment"
        android:label="userLoginFragment"
        tools:layout="@layout/fragment_user_login"/>
    <fragment
        android:id="@+id/signupOptionsFragment"
        android:name="com.example.puppr.SignupOptionsFragment"
        android:label="SignupOptionsFragment"
        tools:layout="@layout/fragment_signup_options">
        <action
            android:id="@+id/action_signupOptionsFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
        <action
            android:id="@+id/action_signupOptionsFragment_to_googleSignInFragment"
            app:destination="@id/googleSignInFragment" />
    </fragment>
    <fragment
        android:id="@+id/userSettingsFragment"
        android:name="com.example.puppr.userSettingsFragment"
        android:label="fragment_user_settings"
        tools:layout="@layout/fragment_user_settings" />
    <fragment
        android:id="@+id/googleSignInFragment"
        android:name="com.example.puppr.googleSignInFragment"
        android:label="fragment_google_sign_in"
        tools:layout="@layout/fragment_google_sign_in" >
        <action
            android:id="@+id/action_googleSignInFragment_to_userSettingsFragment"
            app:destination="@id/userSettingsFragment" />
    </fragment>
</navigation>